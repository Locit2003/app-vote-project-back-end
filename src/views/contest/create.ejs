<%-include ('../header') %>


  <!-- Content wrapper -->
  <div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Create Contest</h4>
      
      <form action="create-contest" method="post">
          <!-- HTML5 Inputs -->
          <div class="card mb-4">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3 row">
                            <label for="html5-text-input" class="col-md-2 col-form-label">Name</label>
                            <div class="col-md-10">
                              <input class="form-control" type="text" name="name" placeholder="Name"  id="html5-text-input" />
                            </div>
                          </div>
                          <div class="mb-3 row">
                            <label for="html5-datetime-local-input" class="col-md-2 col-form-label">Start Datetime</label>
                            <div class="col-md-10">
                              <input
                                class="form-control"
                                type="datetime-local"
                                name="start_date"
                                placeholder="2021-06-18T12:30:00"
                                id="html5-datetime-local-input"
                              />
                            </div>
                          </div>
                          <div class="mb-3 row">
                            <label for="html5-datetime-local-input" class="col-md-2 col-form-label">Last Datetime</label>
                            <div class="col-md-10">
                              <input
                                class="form-control"
                                type="datetime-local"
                                name="last_date"
                                placeholder="2021-06-18T12:30:00"
                                id="html5-datetime-local-input"
                              />
                            </div>
                          </div>
                    </div>
                    <div class="col-md-4">
                        <div class="col-md">
                            <small class="text-light fw-semibold">Status</small>
                            <div class="form-check mt-3">
                              <input
                                name="status"
                                class="form-check-input"
                                type="radio"
                                value="1"
                                id="defaultRadio1"
                              />
                              <label class="form-check-label" for="defaultRadio1"> Display</label>
                            </div>
                            <div class="form-check">
                              <input
                                name="status"
                                class="form-check-input"
                                type="radio"
                                value="0"
                                id="defaultRadio2"
                                checked
                              />
                              <label class="form-check-label" for="defaultRadio2"> Hiding </label>
                            </div>
                        </div>

                        <div class="col-md"> 
                            <button type="submit" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-offset="0,4"
                            data-bs-placement="right" data-bs-html="true" title="Add one candidates ">
                            Sumbit
                          </button>
                        </div>
                    </div>
                </div>
            </div>
          </div>
    </form>
    </div>
    </div>
    <!-- / Content -->


      <%-include ('../footer') %>